---
interface Props {
  title?: string;
}

import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
import CallToAction from "@/components/sections/CallToAction.astro";

import isotipo from "@/assets/img/isotipo.webp";
import "@/styles/global.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={isotipo.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} | Germinis` : "Germinis"}</title>
  </head>
  <body class="bg-primary-bg text-primary-black">
    <Navbar />
    <main>
      <div class="max-w-6xl w-full px-4 mx-auto">
        <slot />

        <CallToAction />
      </div>
    </main>
    <Footer />
  </body>
</html>
