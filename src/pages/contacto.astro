---
import Layout from "@/layouts/Layout.astro";

import PhoneCall from "@/assets/icons/social/PhoneCall.astro";
import MailIcon from "@/assets/icons/social/MailIcon.astro";
import MapPin from "@/assets/icons/social/MapPin.astro";
import SocialNetworks from "@/components/SocialNetworks.astro";
---

<Layout title="Contacto">
  <div class="h-16"></div>

  <div class="py-16 text-center space-y-4">
    <h1 class="text-4xl font-bold text-primary-green">Contactanos</h1>
    <p class="text-sm">Cualquier pregunta, ¡escribenos un mensaje!</p>
  </div>

  <div
    class="flex flex-col-reverse md:flex-row justify-between rounded-lg md:min-h-120 bg-white shadow-lg"
  >
    <div
      class="flex-1 flex flex-col justify-between max-md:gap-6 w-full p-8 text-primary-white bg-primary-green rounded-lg"
    >
      <div class="space-y-2">
        <h2 class="text-2xl font-semibold">Información de Contacto</h2>
        <p class="text-sm">Dinos cualquier duda que tengas.</p>
      </div>

      <div class="space-y-6">
        <div class="space-x-4">
          <PhoneCall className="size-6 inline" />
          <span class="text-sm">+52 55 1234 5678</span>
        </div>
        <div class="space-x-4">
          <MailIcon className="size-6 inline" />
          <span class="text-sm">hola@germinis.com</span>
        </div>
        <div class="space-x-4">
          <MapPin className="size-6 inline" />
          <span class="text-sm"
            >Av Primero de Mayo Col Centro Urbano, C.P 54700, Cuautitlán
            Izcalli, Estado de México</span
          >
        </div>
      </div>

      <SocialNetworks />
    </div>

    <div class="flex-1 space-y-8 p-8">
      <h1 class="text-2xl font-semibold px-2">Información Personal</h1>
      <div
        class="space-y-4 *:p-2 *:border-b *:w-full *:outline-none *:focus:border-green-900 *:focus:border-b-2 *:transition *:duration-200"
      >
        <input type="text" placeholder="Nombre" />
        <input type="email" name="email" id="email" placeholder="Email" />
        <input type="text" placeholder="Asunto" />
        <textarea placeholder="Hola ?" class="resize-y"></textarea>
      </div>

      <button
        type="button"
        class="w-full py-2 rounded-lg bg-primary-green text-primary-white cursor-pointer hover:bg-green-900 transition-colors duration-100"
        >Enviar</button
      >
    </div>
  </div>
</Layout>
